{
    "compilerOptions": {
      "outDir": "lib",
      "target": "ES2020",
      "module": "commonjs",
      "strict": true,
      "allowJs": true,
      "strictNullChecks": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": [
      "src"
    ]
}
  